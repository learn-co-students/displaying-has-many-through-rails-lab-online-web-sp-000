<h2>Doctors</h2>

<% @doctors.each do |d| %>
  <h4><%=d.name%></h4>
  Department: <%=d.department%>
  <% d.appointments.each do |a| %>
    <ul>
      <li>
        <p>Appointment:</p>
        <ul>
          <li><%=a.date%></li>
          <li><%= link_to a.patient.name, patient_path(a.patient) %></li>
        </ul>
      </li>
    </ul>
    <% end %> <!--appointments for doctor-->
<% end %> <!--doctors-->
