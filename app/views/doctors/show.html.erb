<h1>Doctor Details</h1>
<h3>Name: <%= @doctor.name %></h3>
<h3>Department: <%= @doctor.department %></h3>
<h3>Appointment: </h3>
<ul>
    <%= @doctor.appointments.each do |appt| %>
        <li><%= appt.appointment_datetime.to_s(:long_informal) %> - <%= link_to appt.patient.name, patient_path(appt.patient) %></li>
    <% end %>
</ul>