<p><%= @doctor.name %></p>
<p><%= @doctor.department %></p>

<ul>
<%  @doctor.appointments.each do |appointment| %>
        <li><p> <%= link_to appointment.patient.name, patient_path(appointment.patient) %> - <%=appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M")%></p> </li>
    <% end %>

</ul>