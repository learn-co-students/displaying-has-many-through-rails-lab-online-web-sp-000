<h1>About Dr. <%= @doctor.name %></h1>

<h3>Name: <%= @doctor.name %></h3>
<h3>Department: <%= @doctor.department %></h3>

<h3>Appointments:</h3>
<ul>
	<% @doctor.appointments.each do |appt| %>
		<li><%= link_to appt.patient.name, patient_path(appt.patient) %><%= " on #{appt.appointment_datetime.strftime('%B %d, %Y at %H:%M')}" %></li>
	<% end %>
</ul>

