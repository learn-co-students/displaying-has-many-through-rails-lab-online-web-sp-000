<h1><%= @doctor.name %>'s page</h1>
<h3>Department: <%= @doctor.department %></h3>
<h3>Appointments: </h3>


<table>
  <tr>
    <th>Date and Time</th>
    <th>Patient</th>
  </tr>
  <% @doctor.appointments.each do |appt| %>
    <tr>
      <th><%= appt.appointment_datetime.strftime('%B %d, %Y at %H:%M') %></th>
      <th><%= link_to appt.patient.name, patient_path(appt.patient) %></th>
    </tr>
  <% end %>
</table>
