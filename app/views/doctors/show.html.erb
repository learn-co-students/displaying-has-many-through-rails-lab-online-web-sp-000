<h1><%= @doctor.name %></h1>
<h3><%= @doctor.department %></h3>

<table>
  <tr>
    <th>Patient</th>
    <th>Appointment Time</th>
  </tr>
  <% @doctor.appointments.each do |a| %>
    <tr>
      <td><%= link_to a.patient.name, patient_path(a.patient) %></td>
      <td><%= a.appointment_datetime.strftime("%B %-d, %Y at %k:%M") %></td>
    </tr>
  <% end %>
</table>
