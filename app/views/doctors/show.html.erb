<h1><%= @doctor.name %></h1>
<h2><%= @doctor.department %></h2>

<ul>
  <% @doctor.appointments.each do |appt| %>
    <li><%= appt.appointment_datetime.to_date.to_formatted_s(:long)%> at <%= appt.appointment_datetime.time.to_s(:time) %>: <%= link_to appt.patient.name, patient_path(appt.patient_id) %></li>
  <% end %>
</ul>
