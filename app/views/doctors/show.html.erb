<h1><%= @doctor.name %></h1>
<br>
<h2><%= @doctor.department %></h2>
<br>
<h3>Appointments</h3>

<ul>
    <% @doctor.appointments.each do |appt| %>
        <li><%= link_to appt.patient.name, appt.patient %>
        has appointment on:
        <%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M") %>
        </li>
    <% end %>
</ul>

