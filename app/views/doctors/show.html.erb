<h1><%= @doctor.name %></h1>
<h2><%= @doctor.department %></h2>
<ul>
<% @doctor.appointments.each do |appt| %>
  <li>
    <p><%= appt.appointment_datetime.to_formatted_s(:long).split(' ')[0...-1].join(' ') + " at " + appt.appointment_datetime.to_formatted_s(:long).split.pop %></p>
  <p><%= link_to appt.patient.name, patient_path(appt.patient) %></p>
<% end %>
</ul>
