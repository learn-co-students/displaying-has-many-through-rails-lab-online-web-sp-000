<h1><%= @doctor.name %></h1>
<h2>Department: <%= @doctor.department %></h2>
<h3>Appointments:</h3>
<ul>
    <% @doctor.appointments.each do |appointment| %>
    <li>
    <h4><%= link_to appointment.id, appointment_path(appointment) %></h4>
    <h4>Patient: <%= link_to appointment.patient.name, patient_path(appointment.patient) %></h4>
    <h4>time: <%= appointment.schedule %></h4>
    </li>
    <% end %>
</ul>

