<h1>Doctor: <%= @doctor.name %></h1>

<p>Department: <%= @doctor.department %></p>

<h2>Appointments:</h2>

<% @doctor.appointments.each do |appt| %>
<ul>
	<li>
  	<%= appt.appointment_datetime.strftime("%B %-d, %Y at %k:%M") %>, <%= link_to appt.patient.name, patient_path(appt.patient) %>
  	</li>
</ul>
<% end %>
