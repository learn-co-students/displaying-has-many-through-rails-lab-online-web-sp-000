<h2>Appointments</h2>
<ul>
    <% @doctor.appointments.each do |a| %>
        <li>Patient: <%= link_to a.patient.name, patient_path(a.patient) %><br>
            Appointment: <%= a.appointment_datetime.strftime("%B %d, %Y") %> at <%= a.appointment_datetime.strftime("%H:%M") %></li>
    <% end %>
</ul>
