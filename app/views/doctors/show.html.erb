<h2><%= @doctor.name %>'s Appointments</h2>

<ul>
  <%= @doctor.appointments.each do |appointment| %>
    <li>Appointment Date - Time: <%= appointment.appointment_datetime.strftime("%B %d, %Y at %k:%M") %></li>
    <li>Patient: <%= link_to appointment.patient.name, patient_path(appointment.patient) %></li>

  <% end %>
</ul>