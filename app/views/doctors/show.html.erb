<p><%= @doctor.name %></p>
<p><%= @doctor.department %></p>

<ul>
  <% @doctor.appointments.each do |appt| %>
    <li>
      <p> <%= link_to appt.patient.name, appt.patient %> - <%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M")%> </p>
    </li>
  <% end %>
</ul>
