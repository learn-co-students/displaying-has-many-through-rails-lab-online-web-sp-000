<h1><%= @doctor.name %></h1>
<h3><%= @doctor.department %></h3>

<p>Appointments</p>
<ul>
  <% @doctor.appointments.each do |appointment| %>
   <li> <%= link_to appointment.patient.name, patient_path(appointment.patient) %> </li>
   <li> <%= appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M") %> </li>
  <% end %>
</ul>
