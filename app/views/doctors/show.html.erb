<h2>Name: <%= @doctor.name %></h2>
<h3>Department: <%= @doctor.department %></h3>
<ul>
<% @doctor.appointments.each do |app| %>
    <li><%=link_to app.patient.name, patient_path(app.patient)%> 
    <%=app.appointment_datetime.strftime('%B %d, %Y') %> at <%= app.appointment_datetime.strftime('%H:%M') %><br></li>
     
<% end %>