<h2><%= @doctor.name %>, department of <%= @doctor.department %></h2>
<ul>
  <% @doctor.appointments.each do |appointment| %>
    <li>
      Appointment at <%= appointment.appointment_datetime.strftime("%B %e, %Y at %k:%M") %>, 
      with <%= link_to appointment.patient.name, patient_path(appointment.patient) %>
    </li>
  <% end %>
</ul>