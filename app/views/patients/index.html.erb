<p id="notice"><%= notice %></p>
<h1>Patients</h1>
<ul>
  <% @patients.each do |patient| %>
    <li>Name: <%= patient.name %> Number of Appointments: <%= patient.appointments.count %></li>
    <p>
      <% patient.appointments.each do | apt | %>
        <% date = apt.appointment_datetime %>
        <%= date.strftime("%B %d, %Y") %> at <%= date.strftime("%H:%M") %>
      <% end %>
    </p>
  <% end %>
</ul>
<br>
<%= link_to 'New Patient', new_patient_path %>
