<ul>
<% @patients.each do |patient| %>
    <li>Name: <%= link_to patient.name, patient_path(patient) %> </li>
    <li>Number of Appointments: <%= patient.appointments.count %></li>
    <li>Date and Time: <%= patient.appointments.appointment_datetime.strftime("%B %e, %Y at %H:%M%S") %>
<% end %>
</ul>