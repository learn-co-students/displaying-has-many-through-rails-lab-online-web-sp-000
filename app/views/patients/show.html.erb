<h1>Patient <%= @patient.name %></h1>

<h3>Age: </h3><%= @patient.age %>
<h3>Appointments: </h3><%= @patient.appointments.each do |a| %>
<p>For <%= a.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></p>
<p>With <%= link_to a.doctor.name, doctor_path(a.doctor) %></p>
<% end %>
