<h1><%=@patient.name%></h1>
<h2><%=@patient.age%></h2>
<table>
  <tr>
    <th>Doctor</th>
    <th>Time</th>

  </tr>
  <% @patient.appointments.each do |appointment| %>
    <tr>
      <td><%= link_to appointment.doctor.name, doctor_path(appointment.doctor)%></td>
      <th><%=appointment.appointment_datetime_to_s%> </th>

    </tr>
  <% end %>
