<h1>About Patient: <%= @patient.name %></h1>

<h3>Name: <%= @patient.name %></h3>
<h3>Appointments:</h3>
<ul>
	<% @patient.appointments.each do |appt| %>
		<li><%= link_to appt.doctor.name, doctor_path(appt.doctor) %><%= " on #{appt.appointment_datetime.strftime('%B %d, %Y at %H:%M')}" %></li>
	<% end %>
</ul>