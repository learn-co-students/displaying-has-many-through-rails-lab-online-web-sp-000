<h2><%= @patient.name %></h2>
<ul>
  <% @patient.appointments.each do |appointment| %>
    <li>
      Appointment at <%= appointment.appointment_datetime.strftime("%B %e, %Y at %k:%M") %>, 
      with <%= link_to appointment.doctor.name, doctor_path(appointment.doctor) %>
    </li>
  <% end %>
</ul>