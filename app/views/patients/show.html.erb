<h1><%= @patient.name %></h1>
<br>
<h3>Appointments</h3>

<ul>
    <% @patient.appointments.each do |appt| %>
        <li><%= link_to appt.doctor.name, appt.doctor %>
        has appointment on:
        <%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M") %>
        </li>
    <% end %>
</ul>