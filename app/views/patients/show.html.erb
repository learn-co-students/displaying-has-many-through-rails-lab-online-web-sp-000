<h1><%= @patient.name %></h1>
<h2>Age: <%= @patient.age %> </h2>
<h2>Appointments:</h2>
<ol>
    <% @patient.appointments.each do |appointment|%>
        <li><%= appointment.appointment_datetime.strftime("%B %e, %Y")%> at <%= appointment.appointment_datetime.strftime("%H:%M")%></li>
    <% end %>
</ol>
<h2>Doctors:</h2>
<ul>
    <% @patient.doctors.each do |doctor|%>
        <li><%= link_to doctor.name, doctor_path(doctor) %></li>
    <% end %>
</ul>
