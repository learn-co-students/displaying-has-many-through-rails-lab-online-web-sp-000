<h1><%= @patient.name %></h1>

<table>
	<caption><h2>Appointments</h2></caption>
	<thead>
		<tr>
			<th>Date and time</th>
			<th>Doctor</th>
		</tr>
	</thead>
	<tbody>
		<% @patient.appointments.each do |appointment| %>
			<tr>
				<td><%= appointment.date_and_time %></td>
				<td><%= link_to appointment.doctor_name, doctor_path(appointment.doctor) %></td>
			</tr>
		<% end %>
	</tbody>
</table>
